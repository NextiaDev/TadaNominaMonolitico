
@model IEnumerable<TadaNomina.Models.DB.SubsidioEmpleoSat>

@{
                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Subsidio Empleo SAT</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Subsidio Empleo SAT</h3>
        </div>

        <div class="panel-body">
            @Html.ActionLink(" Crear Nuevo Subsidio Empleo SAT", "Create", null, new { @class = "btn btn-info" })
            @Html.ActionLink(" Carga Layout", "CreateLayout", null, new { @class = "btn btn-success" })
            <br />
            <br />
            <table id="demo-dt-selection" class="table table-striped table-hover" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdTipoNomina)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LimiteInferior)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LimiteSuperior)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreditoSalario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaInicio)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipoNomina)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LimiteInferior)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LimiteSuperior)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreditoSalario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaInicio)
                            </td>
                            <td>
                                @Html.ActionLink("  ", "Edit", new { id = item.IdTipoNomina }, new { @class = "fa fa-edit", @rel = "tooltip", @tittle = "Editar" }) |
                                <a href="#" class="anchorDetail" data-id="@item.IdTipoNomina" rel="tooltip" , title="Detalle"><span class="fa fa-search"></span></a> |
                                <a href="#" class="anchorDelete" data-id="@item.IdTipoNomina" rel="tooltip" , title="Eliminar"><span class="fa fa-remove"></span></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<script type="text/javascript">

    var TeamDetailPostBackURL = "@Url.Action("Details", "SubsidioEmpleoSat")";
        $(function () {
            $(".anchorDetail").click(function () {
                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                var href = $(this).attr('href');
                $.ajax({
                    type: "GET",
                    url: TeamDetailPostBackURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });

   var TeamDetailPostBackURLDelete = "@Url.Action("Delete", "SubsidioEmpleoSat")";
        $(function () {
            $(".anchorDelete").click(function () {
                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: TeamDetailPostBackURLDelete,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
         });


</script>


