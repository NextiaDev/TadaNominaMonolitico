@model IEnumerable<TadaNomina.Models.ViewModels.Contabilidad.CuentasModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Póliza Contable</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h2 class="panel-title">
                Cuentas Contables
            </h2>

        </div>
        <div class="panel-body">
            <div class="text-right">

                <a href="@Url.Action("PolizaGral", "PolizaContable")" class="btn btn-primary"><span class="fa fa-eye"></span> Ver Poliza General</a>
            </div>
            <br /><br />
            @if (Model.Count() > 0)
            {
                <form class="form-inline">
                    <table id="CC" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th hidden>IdCuenta</th>
                                <th>Clave</th>
                                <th>Descripción</th>
                                <th>T. Cuenta</th>
                                <th>T. Nom.</th>
                                <th>Ver Poliza</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td hidden>@item.idCuenta</td>
                                    <td> @item.clave</td>
                                    <td> @item.descripcion</td>
                                    <td>@item.TipoCuenta</td>
                                    <td>@item.TipoNomina</td>
                                    <td align="center"><a href="@Url.Action("PolizaGral", "PolizaContable", new { IdPoliza = item.idCuenta })" class="btn btn-sm btn-primary _Load"><i class="glyphicon glyphicon-arrow-right"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>
            }
            else
            {
                <div class="alert alert-info"><span class="fa fa-info"></span> No hay subcuentas registradas por el momento</div>
            }
        </div>
    </div>
</div>