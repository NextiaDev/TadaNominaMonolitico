
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

@section Styles
{
    <link href="~/plugins/datatables/media/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/plugins/datatables/extensions/Responsive/css/responsive.dataTables.min.css" rel="stylesheet" />
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Búsqueda de Empleados</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="row">
        <div class="panel">
            <div class="panel-body">

                <br /><br />

                      <form class="form-horizontal">
                          @Html.AntiForgeryToken()

                          <div class="form-group">
                              <label class="control-label col-md-2">Clave Empleado</label>
                              <div class="col-md-4">
                                  <input id="clave" type="text" class="form-control" />
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="control-label col-md-2">Nombre Empleado</label>
                              <div class="col-md-4">
                                  <input id="name" type="text" class="form-control" />
                                  <label id="errorSearch" class="text-danger"></label>
                              </div>
                          </div>

                          <div class="col-md-5"></div>
                          <input type="submit" id="searchEmp" class="btn btn-success" value="Buscar" data-loading-text="Cargando..." />                          
                      </form>
                <hr />
                <br />


                <div id="tableSearch" style="display:none">
                    @Html.ActionLink("Registrar Empleado", "RegistraEmpleado", null, new { @class = "btn btn-info" })
                    <br /><br />
                    <table id="dataEmp" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Clave Empleado</th>
                                <th>Apellido Paterno</th>
                                <th>Apellido Materno</th>
                                <th>Nombre</th>
                                <th>RFC</th>
                                <th>CURP</th>
                                <th>IMSS</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Core/Employed.js"></script>
}