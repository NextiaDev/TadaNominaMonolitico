@model List<string>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}


<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Chat</h1>
    </div>
</div>



<div class="col-md-12">
    <div id="page-content">
        <div class="col-md-4">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Usuarios
                    </h3>
                </div>
                <div class="panel-body">
                    <div id="itemUso">
                        @foreach (var item in Model)
                        {
                            <div>
                                <a href="#"  id="@item"> @item </a>
                            </div>
                            <br />
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Mensajes
                    </h3>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <ul id="discusion"></ul>
                    </div>

                    <input type="hidden" id="displayname" />
                    <input type="hidden" id="displayUser" />
                    <input type="hidden" id="displayUserSend" />

                </div>
                <div class="panel-footer">
                    <div class="input-group">                        
                        <input type="text" class="form-control" id="message" />                      
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary btn-block" id="sendMessage" value="" >
                            <i class="fa fa-paper-plane"></i>
                            </button>
                        </span>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

