@using TadaNomina.Models.ViewModels.Inicio
@model ModelSelecionarNomina
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Selección de Nómina</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>
<div id="page-content">
    <div class="col-lg-6 col-lg-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Elegir Nómina</h3>
            </div>
            <div class="panel-body">

                <!-- Inline Form  -->
                <!--===================================================-->
                @using (Html.BeginForm("Index", "Default", FormMethod.Post))
                {
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(x => x.IdCliente, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(x => x.IdCliente, Model.cliente, "Elegir...", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.IdunidadNegocio, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(x => x.IdunidadNegocio, Model.unidadNegocio, "Elegir...", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdunidadNegocio, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="panel-footer text-right">

                            <button class="btn btn-primary btn-sm" id="Load" type="submit">Aceptar</button>
                        </div>
                    </div>

                    //<img src="~/img/Mi_CB_GIF.gif" alt="imagen gif" width="50px" height="50px" />

                }
                <!--===================================================-->
                <!-- End Inline Form  -->

            </div>

        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/Core/mensajes.js"></script>
    <script src="~/js/Core/default.js"></script>
}




