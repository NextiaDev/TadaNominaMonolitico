@using TadaNomina.Models.ViewModels.Inicio
@model ModelSelecionarNomina
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Selección de Nómina</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>
<div id="page-content">
    <div class="col-lg-6 col-lg-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Elegir Nómina</h3>
            </div>
            <div class="panel-body">

                <!-- Inline Form  -->
                <!--===================================================-->
                @using (Html.BeginForm("Index", "Default", FormMethod.Post))
                {
                    <div class="form-horizontal">
                        @if(ViewBag.Mensaje != null)
                        { 
                            <div class="alert alert-danger">
                                <span class="fa fa-warning"></span>
                                No se puede ingresar a la nómina indicada. @ViewBag.Mensaje
                            </div>
                        }
                        <div class="form-group">
                            <div>
                                @Html.DropDownList("Cliente", Model.cliente, "Seleccionar", new { @class = "form-control", id = "IdCliente" })
                            </div>



                        </div>

                        <div class="form-group" id="myDIV" style="display: none">
                            <div>
                                @Html.DropDownList("Unidad", Model.unidadNegocio, "Seleccionar", new { @class = "form-control", id = "idUnidad" })
                            </div>

                        </div>

                        <div class="panel-footer text-right">

                            <a class="btn btn-primary btn-sm" id="Seleccionar">Aceptar</a>
                        </div>
                    </div>

                    //<img src="~/img/Mi_CB_GIF.gif" alt="imagen gif" width="50px" height="50px" />

                }
                <!--===================================================-->
                <!-- End Inline Form  -->

            </div>

        </div>
    </div>

</div>

<div id="ruta" val="@Url.Action("Index", "Index")">
    </div>
    @section Scripts{
        <script src="~/js/Core/mensajes.js"></script>
        <script src="~/js/Core/default.js"></script>
    }




