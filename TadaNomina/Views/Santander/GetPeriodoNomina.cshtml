@model TadaNomina.Models.ViewModels.LayoutBancos.ModelSantander
@{
    ViewBag.Title = "GetPeriodoNomina";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
    string mensaje = ViewBag.mensaje;
}

<div id="page-head">
    @if (mensaje != null)
    {
        <div class="alert alert-warning">
            <button class="close" data-dismiss="alert">
                <i class="pci-cross pci-circle"></i>
            </button>
            <strong>Error:</strong>
            @mensaje
        </div>
    }
    <div id="page-title">
        <h1 class="page-header text-overflow"> Genera layout</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel">

        <div>
            <h3>Santander</h3>
        </div>

        @using (Html.BeginForm("SantanderMismo", "Santander", FormMethod.Get))
        {
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.IdPeriodoNomina, Model.PeriodosNomina, "Selecconar periodo...", htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="col-md-5">
                        <button type="submit" class="btn btn-primary btn-success">Mismo Banco</button>
                    </div>
                </div>
            </div>
            <br />
            <br />
        }

        @using (Html.BeginForm("SantanderInter", "Santander", FormMethod.Get))
        {
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.IdPeriodoNomina, Model.PeriodosNomina, "Selecconar periodo...", htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="col-md-5">
                        <button type="submit" class="btn btn-primary btn-success">Interbancario</button>
                    </div>
                </div>
            </div>
            <br />
            <br />
        }
    </div>

    <div class="panel">
        <div>
            <h3>BBVA</h3>
        </div>

        @using (Html.BeginForm("MismoBanco", "Bancomer", FormMethod.Get))
        {
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.IdPeriodoNomina, Model.PeriodosNomina, "Selecconar periodo...", htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="col-md-5">
                        <button type="submit" class="btn btn-primary btn-success">Mismo Banco</button>
                    </div>
                </div>
            </div>
            <br />
            <br />
        }

        @using (Html.BeginForm("BancomerInter", "Bancomer", FormMethod.Get))
        {
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.IdPeriodoNomina, Model.PeriodosNomina, "Selecconar periodo...", htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="col-md-5">
                        <button type="submit" class="btn btn-primary btn-success">Interbancario</button>
                    </div>
                </div>
            </div>
            <br />
            <br />
        }
    </div>
</div>

