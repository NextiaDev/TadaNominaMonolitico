
@model TadaNomina.Models.ViewModels.Catalogos.ModelAreas
@{
    ViewBag.Title = "CreateLayout";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Nuevo Layuot Centros de Costos</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Carga Layout</h3>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("CreateLayout", "Areas", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="alert alert-info">
                        <span class="fa fa-info-circle"></span>
                        Nota: El archivo debe de guardarse y cargarse en formato CSV (Delimitado por comas)
                    </div>
                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.Label("Descargar Formato:", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <a href="~/Formatos/FormatoAreas.xlsx" download="FormatoAreas">
                                    <span class="fa fa-cloud-download"> Formato de Areas</span>
                                </a>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Archivo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">

                                @Html.TextBoxFor(model => model.Archivo, new { type = "file", @class = "inputfile" })
                                @Html.ValidationMessageFor(model => model.Archivo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />
                        <div class="form-group">
                            <div class="col-md-12">
                                @if (Model.Mensaje != null)
                                {
                                    if (Model.validacion)
                                    {
                                        <div class="alert alert-info">
                                            @Model.Mensaje
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger">
                                            @Model.Mensaje
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <br />

                        <div class="panel-footer text-right">


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cargar" class="btn btn-primary btn-sm" />
                                    @Html.ActionLink("Regresar a lista", "Area", null, new { @class = "btn btn-info btn-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
