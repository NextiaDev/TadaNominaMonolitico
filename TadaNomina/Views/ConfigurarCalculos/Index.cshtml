@model TadaNomina.Models.ViewModels.Catalogos.ModelConfiguracionFechasCalculos
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Configura conceptos para calculos del sistema.</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">

    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Caputar Datos.</h3>
        </div>
        <div class="panel-body">

            <div class="alert alert-info" role="alert">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                Aquí se configuran las fechas para los cálculos que se realizan automaticamente.
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />            

            <div class="form-group">
                @Html.LabelFor(model => model.FechaVacacionesReal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaVacacionesReal, Model.lFechasVR, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaVacaciones, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaVacaciones, Model.lFechasV, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaVacacionesEsq, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaVacacionesEsq, Model.lFechasVE, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FechaPVReal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaPVReal, Model.lFechasPVR, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaPV, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaPV, Model.lFechasPV, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaPVEsq, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaPVEsq, Model.lFechasPVE, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FechaAguinaldoReal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaAguinaldoReal, Model.lFechasAR, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaAguinaldo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaAguinaldo, Model.lFechasA, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaAguinaldoReal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaAguinaldoReal, Model.lFechasAE, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FechaLiquidacionReal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaLiquidacionReal, Model.lFechasLR, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaLiquidacion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaLiquidacion, Model.lFechasL, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.FechaLiquidacionEsq, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.FechaLiquidacionEsq, Model.lFechasLE, "Elegir...", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-12">
                    @if (Model.Mensaje != null)
                    {
                        if (Model.validacion)
                        {
                            <div class="alert alert-info">
                                @Model.Mensaje
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                @Model.Mensaje
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-group" style="text-align:right">

                    <input type="submit" value="Guardar" class="btn btn-primary btn-sm _Aceptar" />

                </div>
            </div>
        </div>
            }

        </div>
    </div>

</div>


