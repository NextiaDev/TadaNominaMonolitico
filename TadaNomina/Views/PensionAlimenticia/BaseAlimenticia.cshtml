@model IEnumerable<TadaNomina.Models.DB.BasePensionAlimenticia>

@{
    ViewBag.Title = "BaseAlimenticia";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";

}


<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Base Pensión </h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>


<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Bases Disponibles</h3>
        </div>

        <div class="panel-body">
            @Html.ActionLink(" Crear Nuevo Base", "CreateBasePension", null, new { @class = "btn btn-info btn-sm" })
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info btn-sm" })

            <br />
            <br />
            <table id="demo-dt-selection" class="table table-striped table-hover" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdBasePensionAlimenticia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Formula)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdBasePensionAlimenticia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Formula)
                            </td>
                            <td>
                                @Html.ActionLink("  ", "EditBase", new { id = item.IdBasePensionAlimenticia }, new { @class = "btn btn-default btn-sm fa fa-edit", @rel = "tooltip", @tittle = "Editar" }) |
                                <a href="#" class="anchorDetail" data-id="@item.IdBasePensionAlimenticia" rel="tooltip" , title="Detalle"><span class="btn btn-default btn-sm fa fa-search"></span></a> |
                                <a href="#" class="anchorDelete" data-id="@item.IdBasePensionAlimenticia" rel="tooltip" , title="Eliminar"><span class="btn btn-default btn-sm fa fa-remove"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Core/pensionBase.js"></script>
}
