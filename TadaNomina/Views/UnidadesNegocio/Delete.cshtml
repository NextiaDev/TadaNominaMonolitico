@model TadaNomina.Models.ViewModels.Catalogos.ModelUnidadesNegocio

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><i class="pci-cross pci-circle"></i></button>
    <h4 class="modal-title">Eliminar Periodo</h4>
</div>
<div class="modal-body">

    <label> Esta seguro que desea eliminar la siguiente Unidad de Negocio?</label>
    <br />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cliente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnidadNegocio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnidadNegocio)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-footer">
            <div class="form-actions no-color">
                <button class="btn btn-default btn-sm" data-dismiss="modal" type="button">Cancelar</button>
                <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
            </div>
        </div>
    }
</div>
