@model TadaNomina.Models.ViewModels.Nominas.ModeloSaldos


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}


<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Nuevo Saldo</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Captura Saldos</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdEmpleado, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.IdEmpleado, Model.LEmpleados, "Elegir...", new { @class = "form-control", @id = "emp" })
                                        @Html.ValidationMessageFor(model => model.IdEmpleado, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdTipo, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.IdTipo, Model.LTipo, "Elegir...", new { @class = "form-control", @id = "AplicaPor" })
                                        @Html.ValidationMessageFor(model => model.IdTipo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="Conceptos" style="display: none">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdConcepto, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.IdConcepto, Model.LConcepto, "Elegir...", new { @class = "form-control", id = "IdConcepto" })
                                        @Html.ValidationMessageFor(model => model.IdConcepto, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Campos para Periodo de Tiempo *@

                        <div class="row" id="fechas" style="display: none">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FechaIncio, new { @class = "control-label col-md-4 Cantidad" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.FechaIncio, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FechaFinal, new { @class = "control-label col-md-4 Cantidad" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.FechaFinal, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="Indefinido" style="display: none">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Indefinido, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.CheckBoxFor(model => model.Indefinido)
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.HiddenFor(m => m.Folio)
                        <div class="row" id="Monto" style="display: none">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Monto, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Monto, new { @class = "form-control", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Campos para Saldos *@

                        <div class="row" id="Saldos" style="display: none">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SaldoI, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.SaldoI, new { @class = "form-control", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.SaldoI, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SaldoA, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.SaldoA, new { @class = "form-control", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.SaldoA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="Saldosdos" style="display: none">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MontoP, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.MontoP, new { @class = "form-control", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.MontoP, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NumeroP, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.NumeroP, new { @class = "form-control", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.NumeroP, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @* Campos comunes *@

                        <div class="row" id="Observaciones" style="display: none">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Observaciones, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Observaciones, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-12">
                                @if (Model.Mensaje != null)
                                {
                                    if (Model.validacion)
                                    {
                                        <div class="alert alert-info">
                                            @Model.Mensaje
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger">
                                            @Model.Mensaje
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="panel-footer" style="text-align:right">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                                    @Html.ActionLink("Regresar", "Index", new { pIdPeriodoNomina = ViewBag.Periodo }, new { @class = "btn btn-info btn-sm _Back" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Core/mensajes.js"></script>
    <script src="~/js/Core/default.js"></script>
    <script src="~/js/Core/Saldos.js"></script>
}