@model TadaNomina.Models.ViewModels.Catalogos.ModelFactorIntegracion
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Prestaciones</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Caputar Datos.</h3>
            </div>
            <div class="panel-body">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdFactorIntegracion)
                        @Html.HiddenFor(model => model.IdPrestaciones)

                        <div class="form-group">

                            @Html.LabelFor(model => model.Limite_Inferior, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.Limite_Inferior, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Limite_Inferior, "", new { @class = "text-danger" })
                            </div>

                            @Html.LabelFor(model => model.Limite_Superior, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.Limite_Superior, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Limite_Superior, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(model => model.Aguinaldo, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.Aguinaldo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Aguinaldo, "", new { @class = "text-danger" })
                            </div>

                            @Html.LabelFor(model => model.Vacaciones, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.Vacaciones, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Vacaciones, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            @Html.LabelFor(model => model.PrimaVacacional, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.PrimaVacacional, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PrimaVacacional, "", new { @class = "text-danger" })
                            </div>

                            @Html.LabelFor(model => model.PrimaVacacionalSDI, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.PrimaVacacionalSDI, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PrimaVacacionalSDI, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            @Html.LabelFor(model => model.FactorIntegracion, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.FactorIntegracion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.FactorIntegracion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="panel-footer">
                            <div class="form-group" style="text-align:right">
                                <input type="submit" value="Actualizar" class="btn btn-primary" />
                                @Html.ActionLink("Regresar a lista", "Index", new { id= Model.IdPrestaciones }, new { @class = "btn btn-info" })
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>