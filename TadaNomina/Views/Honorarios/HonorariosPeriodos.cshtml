@model IEnumerable<TadaNomina.Models.ViewModels.Nominas.ModelPeriodoNomina>

@{
    ViewBag.Title = "HonorariosPeriodos";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}


<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Periodos Honorarios</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">
                Periodos Disponibles
            </h3>
        </div>
        <div class="panel-body">
            <br /><br />
            @if (Model.Count() > 0)
            {
                <table class="table table-hover table-sm" cellspacing="0" width="100%">
                    <thead>
                        <tr>

                            <th>
                                Unidad
                            </th>
                            <th>
                                Periodo
                            </th>
                            <th>
                                Tipo
                            </th>
                            <th>
                                F.Inicial
                            </th>
                            <th>
                                F.Final
                            </th>

                            <th>
                               Estatus
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.UnidaNegocio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Periodo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoNomina)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaFin)
                                </td>
                                @if (item.IdEstatus == 1)
                                {
                                    <td>
                                        <span class="badge badge-primary">Abierto</span>
                                    </td>
                                }
                                @if (item.IdEstatus == 2)
                                {
                                    <td>
                                        <span class="badge badge-warning">Eliminado</span>
                                    </td>
                                }
                                @if (item.IdEstatus == 3)
                                {
                                    <td>
                                        <span class="badge badge-success">Concluio</span>
                                    </td>
                                }


                                <td>

                                    @Html.ActionLink(" ", "HonorariosUser", new { Periodo = item.IdPeriodoNomina }, new { @class = "btn btn-primary btn-sm fa fa-list _Load", @rel = "tooltip", @title = "Editar", @id = string.Concat("edit", item.IdPeriodoNomina) })

                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    No hay periodos abiertos.
                </div>
            }
        </div>
    </div>

</div>

