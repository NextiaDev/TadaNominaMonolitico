
@model TadaNomina.Models.ViewModels.CFDI.ModelConceptosFacturacion
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";

    var _Facturadoras = (List<SelectListItem>)ViewBag._lstFacturadoras;
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Editar Concepto</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>
<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Caputar Datos.</h3>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    <div class="form-group">
                        @Html.HiddenFor(x => x.IdConceptoFacturacion, new { htmlAttributes = new { @class = "form-control " } })
                        <div class="col-md-4">
                            <label>Concepto</label>
                            @Html.EditorFor(x => x.Concepto, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="col-md-4">
                            <label>Clave SAT</label>
                            @Html.EditorFor(x => x.ClaveSat, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Descripción de la clave SAT</label>
                            @Html.TextAreaFor(x => x.DescripcionClaveSat, new { @class = "form-control medium-textarea" })
                        </div>
                        <div class="col-md-4">
                            <label>Facturadora</label>
                            @Html.DropDownListFor(x => x.IdFacturadora, _Facturadoras, new { @class = "form-control" })
                        </div>
                    </div>


                </div>
                <br />
                <div class="panel-footer">
                    <div class="form-group" style="text-align:right">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-sm _Load" />
                        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info btn-sm" })
                    </div>
                </div>
            }
        </div>

    </div>
</div>


