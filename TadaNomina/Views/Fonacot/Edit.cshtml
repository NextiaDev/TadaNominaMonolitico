@model TadaNomina.Models.ViewModels.Nominas.ModelFonacot
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Editar Créditos Fonacot</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div class="col-md-8 col-md-offset-2">
    <div id="page-content">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Caputar Datos.</h3>
            </div>
            <div class="panel-body">
                <hr />

                <br />
                <div class="row">
                    <div class="form-group">
                        <div class="form-horizontal">
                            @Html.LabelFor(model => model.NombreEmpleado, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.NombreEmpleado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.NombreEmpleado, "", new { @class = "text-danger" })
                            </div>
                            @Html.LabelFor(model => model.RFC, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.RFC, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.RFC, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(x => x.IdCreditoFonacot);

                    <div class="form-horizontal">
                        @Html.HiddenFor(x => x.IdEmpleado)
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NoTrabajadorFonacot, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.NoTrabajadorFonacot, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.NoTrabajadorFonacot, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(model => model.NumeroCredito, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.NumeroCredito, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" }  })
                                    @Html.ValidationMessageFor(model => model.NumeroCredito, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Plazos, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Plazos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Plazos, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(model => model.CuotasPagadas, htmlAttributes: new { @class = "control-label col-md-2", })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.CuotasPagadas, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.CuotasPagadas, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <br />

                        <br />
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.RetencionMensual, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.RetencionMensual, new { htmlAttributes = new { @class = "form-control" ,  } })
                                    @Html.ValidationMessageFor(model => model.RetencionMensual, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                        <br />

                        <div class="form-group">
                            <div class="col-md-12">
                                @if (Model.Mensaje != null)
                                {
                                    if (Model.Validacion)
                                    {
                                        <div class="alert alert-info">
                                            @Model.Mensaje
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger">
                                            @Model.Mensaje
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="text-right">
                                <input type="submit" value="Editar" class="btn btn-primary btn-sm" />
                                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info btn-sm" })
                            </div>
                        </div>
                    </div>
                }

                <div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Core/mensajes.js"></script>
    <script src="~/js/Core/CreditosFonacot.js"></script>
}




