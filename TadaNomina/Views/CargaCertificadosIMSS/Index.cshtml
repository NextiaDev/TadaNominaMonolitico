@model List<TadaNomina.Models.DB.Cat_RegistroPatronal>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Registro Patronal</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>


<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Carga certificados</h3>
        </div>

        <div class="panel-body">
            <table class="table table-striped table-hover" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>

                        <th>
                            R. Social
                        </th>
                        <th>
                            Reg. Pat
                        </th>
                        <th>
                            RFC
                        </th>
                        <th>
                            Certificado
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdRegistroPatronal)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.NombrePatrona)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistroPatronal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RFC)
                            </td>
                            <td>
                                @if (item.CertificadoIMSS != null)
                                {
                                    <label class="label label-success">Cargado</label>
                                }
                                else
                                {
                                    <label class="label label-danger">No cargado</label>
                                }
                            </td>

                            <td>
                                @Html.ActionLink(" ", "CargaCerIMSS", new { IdReg = item.IdRegistroPatronal }, new { @class = "fa fa-upload btn btn-primary btn-sm _Load" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
