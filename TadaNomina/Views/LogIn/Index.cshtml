@model TadaNomina.Models.ViewModels.ModelLogin
@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <title>Login | TADA-NOMINA</title>

    <!-- STYLESHEETS -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~--- -->
    <!-- Fonts [ OPTIONAL ] -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS [ REQUIRED ] -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Nifty CSS [ REQUIRED ] -->
    <link href="~/assets/css/nifty.min.css" rel="stylesheet" />

    <!-- Nifty Demo Icons [ OPTIONAL ] -->
    <link href="~/assets/css/demo-purpose/demo-icons.min.css" rel="stylesheet" />

    <!-- Demo purpose CSS [ DEMO ] -->
    <link href="~/assets/css/demo-purpose/demo-settings.min.css" rel="stylesheet" />

    <style>
        .card-body {
            flex: 1.8auto;
            padding: 3.0rem 4rem;
        }
    </style>

</head>



<body class="" style="background-image: url('@Url.Content("~/assets/premium/boxed-bg/polygon/bg/1.jpg")'); ">

    <!-- PAGE CONTAINER -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <div id="root" class="root front-container">

        <!-- CONTENTS -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <section id="content" class="content">
            <div class="content__boxed w-100 min-vh-100 d-flex flex-column align-items-center justify-content-center">
                <div class="content__wrap">

                    <!-- Login card -->
                    <div class="card shadow-lg">
                        <div class="card-body">

                            <div class="text-center">
                                <img src="~/img/TADA.png" width="100px" height="100px" />
                                <h1 class="h3">TADÁ Nómina </h1>


                                <p>Iniciar sesión en su cuenta</p>
                            </div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <form class="mt-4" action="index.html">

                                    <div class="mb-3">

                                        @Html.TextBoxFor(x => x.username, htmlAttributes: new { @class = "form-control", @placeholder = "Usuario" })

                                    </div>

                                    <div class="mb-3">
                                        @Html.PasswordFor(x => x.password, htmlAttributes: new { @class = "form-control", @placeholder = "Password" })
                                    </div>

                                    
                                    @*<div class="form-check">
                                        <input id="_dm-loginCheck" class="form-check-input" type="checkbox">
                                        <label for="_dm-loginCheck" class="form-check-label">
                                            Recordar
                                        </label>
                                    </div>*@

                                    <div class="d-grid mt-5">
                                        <button id="Aceptar" class="btn btn-primary btn-lg" type="submit">INGRESAR</button>
                                    </div>
                                </form>
                            }
                            <div class="d-flex justify-content-between mt-4">
                                @if (ViewBag.Mensaje != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.Mensaje
                                    </div>
                                }
                            </div>



                        </div>
                    </div>
                    <!-- END : Login card -->
                    <!-- Show the background images container -->
                    <!-- END : Show the background images container -->

                </div>
            </div>
        </section>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- END - CONTENTS -->
    </div>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- END - PAGE CONTAINER -->   
    <!-- JAVASCRIPTS -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Popper JS [ OPTIONAL ] -->
    <!--jQuery [ REQUIRED ]-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/assets/vendors/popperjs/popper.min.js"></script>

    <!-- Bootstrap JS [ OPTIONAL ] -->
    <script src="~/assets/vendors/bootstrap/bootstrap.min.js"></script>

    <!-- Nifty JS [ OPTIONAL ] -->
    <script src="~/assets/js/nifty.js"></script>
    <script src="~/assets/js/demo-purpose-only.js"></script>
    <!-- Nifty Settings [ DEMO ] -->
    <script src="~/js/demo/bg-images.js"></script>
    <script src="~/js/jquery.loading.min.js"></script>

    <script type="text/javascript">
        $("#Aceptar").click(function () {
            $.showLoading({
                name: 'jump-pulse'
            });
        });

        localStorage.removeItem('_menuPantalla');
        localStorage.removeItem('_submenuPantalla');
    </script>


</body>

</html>








