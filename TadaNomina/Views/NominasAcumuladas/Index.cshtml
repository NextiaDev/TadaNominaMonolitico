@model IEnumerable<TadaNomina.Models.ViewModels.Nominas.ModelPeriodoNomina>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Nomina</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>


<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Periodos de Nomina disponibles</h3>
        </div>

        <div class="panel-body">
            @if (Model.Count() > 0)
            {
                <table id="demo-dt-selection" class="table table-striped table-hover table-responsive table-sm" cellpadding="0">
                    <thead>
                        <tr>
                            <th>
                                Periodo
                            </th>
                            <th>
                                F.Inicial
                            </th>
                            <th>
                                F.Final
                            </th>
                            <th>
                                F.Dispersión
                            </th>
                            <th>
                                Tipo
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Periodo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaFin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaDispersion_)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoNomina)
                                </td>

                                <td>

                                    <a href="@Url.Action("NominaGeneral", new { item.IdPeriodoNomina })" class="btn btn-primary btn-sm _Load"><span class="fa fa-sign-in"></span> Seleccionar</a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    No hay periodos acumulados para mostrar.
                </div>
            }
        </div>
    </div>
</div>

