@model IEnumerable<TadaNomina.Models.ViewModels.Reportes.ModelReportesEmpleados>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Reportes Empleados</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Reportes Disponibles</h3>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnidadNegocio)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.NombreReporte)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnidadNegocio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreReporte)
                        </td>
                        <td>
                            @*<button class="btn btn-success" onclick="generaReporte(@item.Id)"> Descargar</button>*@
                            @Html.ActionLink("Descargar", "Descargar", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="dvjson"></div>
</div>


