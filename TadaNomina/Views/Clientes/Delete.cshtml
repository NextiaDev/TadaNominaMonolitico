@model TadaNomina.Models.ViewModels.Catalogos.ModelClientes

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><i class="pci-cross pci-circle"></i></button>
    <h4 class="modal-title">Esta seguro que desea eliminar el siguiente cliente?</h4>
</div>

<div class="modal-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cliente)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RazonSocial)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RazonSocial)
            </dd>
        </dl>
        <div class="panel">
            <div class="panel-heading">
                <h4>
                    Por favor llene los siguentes campos:
                </h4>
            </div>
            <div class="panel-body">
                <input type="hidden" name="IdCliente" value="@Model.IdCliente" />
                <div class="form-group">
                    <label class="col-sm-3 control-label">
                        Fecha Baja
                    </label>
                    <div class="col-sm-9">
                        <input type="date" name="FechaBaja" class="form-control" required />
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <label class=" col-sm-3 control-label">
                        Motivo de Baja
                    </label>
                    <div class="col-sm-9">
                        <textarea type="text" rows="10" name="MotivoBaja" class="form-control" required/>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-actions no-color">
                <button class="btn btn-default btn-sm" data-dismiss="modal" type="button">Cancelar</button>
                <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
            </div>
        </div>
    }
</div>


