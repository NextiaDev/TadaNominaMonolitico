
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}


<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Logs</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>


<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Logs del Sistema</h3>
        </div>

        <div class="panel-body">

            <br />
            <div class="row">
                @using (Html.BeginForm("getReporte", "Logs", FormMethod.Post))
                {
                    <div class="col-md-2 text-right">
                        Elegir Fecha:
                    </div>
                    <div class="col-md-4">
                        <input type="date" id="_date" name="_date" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <a href="#" class="btn btn-primary btn-sm" id="btnBUscar"><span class="fa fa-search"></span> Buscar</a>
                        <a href="#" class="btn btn-info btn-sm" id="btnBUscar2"><span class="fa fa-refresh"></span> Refrescar</a>
                        <a href="@Url.Action("Index")" class="btn btn-mint btn-sm"><span class="fa fa-trash"></span> Limpiar</a>
                        <button type="submit" class="btn btn-dark btn-sm"><span class="fa fa-download"></span> Descargar</button>
                    </div>
                }
            </div>
            <br />
            <div class="row">
                <textarea id="_logs" rows="20" class="form-control" readonly>
                </textarea>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    
    <script src="~/js/Core/mensajes.js"></script>
    <script src="~/js/Core/logs.js"></script>
}

