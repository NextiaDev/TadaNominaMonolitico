@model TadaNomina.Models.ViewModels.Nominas.ModelInfonavit

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><i class="pci-cross pci-circle"></i></button>
    <h4 class="modal-title">Porcentaje</h4>
</div>

<div class="modal-body">

    <h3>Modificación de Factor y Porcentaje Tradicional</h3>
    <div>

        <hr />


        @using (Html.BeginForm())
        {
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ClaveEmp)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ClaveEmp)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Empleado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Empleado)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.rfc)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.rfc)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tipo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NoCredito)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NoCredito)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CantidadUnidad)
                </dt>

                <dd>
                    @Html.TextBoxFor(model => model.CantidadUnidad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.BanderaSeguroVivienda)
                </dt>

                <dd>
                    @Html.CheckBoxFor(model => model.BanderaSeguroVivienda)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>

                <dd>
                    @Html.CheckBoxFor(model => model.Activo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Estatus)
