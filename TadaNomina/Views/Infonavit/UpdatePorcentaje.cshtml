                <dt>
                    @Html.DisplayNameFor(model => model.PorcentajeTradicional)
                </dt>

                <dd>
                    @Html.TextBoxFor(model => model.PorcentajeTradicional)
                </dd>


            </dl>


            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.IdCreditoInfonavit)
            <div class="modal-footer">
                <div class="form-actions no-color">
                    <button class="btn btn-default btn-sm" data-dismiss="modal" type="button">Cancelar</button>
                    <input type="submit" value="Actualizar" class="btn btn-danger btn-sm" />
                </div>
            </div>
        }
    </div>
</div>
