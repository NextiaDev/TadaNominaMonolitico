                            </div>
                            @Html.LabelFor(model => model.ClaveConcepto, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.ClaveConcepto, new { htmlAttributes = new { @class = "form-control" } })
