@model TadaNomina.Models.ViewModels.MovimientosIMSS.mEmisiones
@{
    ViewBag.Title = "Emisiones";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
    string mensaje = ViewBag.Mensaje;
}

<div id="page-head">
    @if (mensaje != null)
    {
        <div class="alert alert-warning">
            <button class="close" data-dismiss="alert">
                <i class="pci-cross pci-circle"></i>
            </button>
            <strong>Advertencia:</strong>
            @mensaje
        </div>
    }
    <div id="page-title">
        <h1 class="page-header text-overflow">Emisiones</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel panel-body text-left">
        <div class="panel-heading">
            <h4 class="panel title">
                Informaci&oacute;n de la Empresa
            </h4>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-4">
                    <label class="control-label">Nombre de la Empresa</label>
                    <div id="example" class="form-control" readonly="true">
                        <label>@Model.infoRegistro.NombrePatrona</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="control-label">Registro Patronal</label>
                    <div id="example" class="form-control" readonly="true">
                        <label>@Model.infoRegistro.RegistroPatronal</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="control-label">RFC</label>
                    <div id="example" class="form-control" readonly="true">
                        <label>@Model.infoRegistro.RFC</label>
                    </div>
                </div>
                <div class="col-sm-5">
                    <label class="control-label">Direcci&oacute;n</label>
                    <textarea class="form-control" readonly="readonly">@Model.infoRegistro.Direccion</textarea>
                </div>
                @using (Html.BeginForm("DescargaEmision", "Consultas"))
                {
                    <input type="hidden" id="idregistro" name="idregistro" value="@ViewBag.id" />
                    <div class="col-sm-4">
                        <label class="control-label">Seleccione el tipo de archivo que desea descargar</label>
                        <div>
                            @Html.DropDownListFor(p => p.tipoemision, Model.tiposArchivos, new { @class = "form-control", autocomplete = "off", id = "TE" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="panel-footer text-right">
                                <a href="~/Consultas/Index" class="btn btn-danger">Regresar</a>
                                @*<button class="btn btn-warning" id="Validar" data-target="#panel-overlay" type="button" onclick="Valida()">Validar archivo</button>*@
                                <button type="submit" id="Descargar" class="btn btn-success"><i class="fa fa-download"></i>Descarga</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




