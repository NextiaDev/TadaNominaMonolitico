@model List<TadaNomina.Models.DB.Cat_RegistroPatronal>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
    string mensaje = ViewBag.Mensaje;
}

<div id="page-head">
    @if (mensaje != null)
    {
        <div class="alert alert-danger">
            <button class="close" data-dismiss="alert">
                <i class="pci-cross pci-circle"></i>
            </button>
            <strong>Error:</strong>
            @mensaje
        </div>
    }
    <div id="page-title">
        <h1 class="page-header text-overflow">Consulta lotes IMSS</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel">
        <div class="panel-body">
            <div class="panel-heading">
                <div class="panel-title">
                    <a>Registros patronales</a>
                </div>
            </div>
            <hr />
            <table id="DT" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th hidden="hidden">Id</th>
                        <th>Nombre de la empresa patrona</th>
                        <th>Registro patronal</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td hidden="hidden">@item.IdRegistroPatronal</td>
                            <td>@item.NombrePatrona</td>
                            <td>@item.RegistroPatronal</td>
                            <td>
                                <a href="~/Consultas/ListadoLotes?IdRegistroPatronal=@item.IdRegistroPatronal" class="btn btn-sm btn-success" data-toggle="tooltip" data-container="body" data-placement="left" data-original-title="Consulta lotes"><i class="fa fa-search"></i></a>
                                <a href="~/Consultas/Emisiones?IdRegistroPatronal=@item.IdRegistroPatronal" class="btn btn-sm btn-danger" data-toggle="tooltip" data-container="body" data-placement="left" data-original-title="Emisiones"><i class="fa fa-file"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

