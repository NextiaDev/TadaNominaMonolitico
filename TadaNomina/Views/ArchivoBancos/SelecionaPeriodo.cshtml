@model IEnumerable<TadaNomina.Models.ViewModels.Nominas.ModelPeriodoNomina>

@{
    ViewBag.Title = "SelecionaPeriodo";
    Layout = "~/Views/Shared/_layoutPrincipal.cshtml";
}

<div id="page-head">
    <div id="page-title">
        <h1 class="page-header text-overflow">Archivos de Bancos</h1>
    </div>
    <div id="rutaPrincipal"></div>
</div>

<div id="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Periodos de Nómina disponibles</h3>
        </div>

        <div class="panel-body">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped table-hover table-sm" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UnidaNegocio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Periodo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoNomina)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaInicio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaFin)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnidaNegocio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Periodo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoNomina)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaFin)
                                </td>

                                <td>
                                    @Html.ActionLink("Tradicional", "DescargarTradicional", new { pIdPeriodoNomina = item.IdPeriodoNomina }, new { @class = "btn btn-info btn-sm" })
                                    @Html.ActionLink("Esquema", "DescargarEsquema", new { pIdPeriodoNomina = item.IdPeriodoNomina }, new { @class = "btn btn-mint btn-sm" })
                                    @Html.ActionLink("Honorario", "DescargarHonorario", new { pIdPeriodoNomina = item.IdPeriodoNomina }, new { @class = "btn btn-success btn-sm" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    No hay periodos disponibles para ingresar incidencias, Por favor cree un periodo!.
                </div>
            }
        </div>
    </div>
</div>

